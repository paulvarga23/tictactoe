<div class="sign">
  <h1>Sign In</h1>
  <h2>Welcome back<h2>
  <%= form_tag sessions_path do %>
    <div class="field">
      <p><%= label_tag :email %></p>
      <p><%= text_field_tag :email, params[:email] %></p>
    </div>
    <div class="field">
      <p><%= label_tag :password %></p>
      <p><%= password_field_tag :password %></p>
    </div>
    <div class="actions"><%= submit_tag "Sign in" %></div>
  <% end %>
</div>